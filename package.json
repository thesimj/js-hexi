{
  "name": "js-hexi",
  "version": "1.0.0",
  "description": "Pure Javasript base encode decoder",
  "main": "src/jshexi.js",
  "directories": {
    "test": "test",
    "src": "src",
    "lib": "lib"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-babili": "^0.0.10",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.18.0",
    "babili": "^0.0.10",
    "browserify": "^14.0.0",
    "cross-env": "^3.1.4",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-standard": "^2.0.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "tape-watch": "^2.2.4",
    "uglify-js": "^2.7.5"
  },
  "scripts": {
    "t": "browserify -s ./src/jshexi.js -o ./src/jshexi.min.js",
    "prod": "npm run build && cross-env BABEL_ENV=production babel ./src/jshexi.js --out-file ./lib/jshexi.min.js",
    "build": "babel ./src/jshexi.js --out-file ./lib/jshexi.js --source-maps inline",
    "test": " npm run lint && tape -r babel-register test/**/*.test.js | tap-spec",
    "watch": "tape-watch test/**/*.test.js -r babel-register -p tap-spec",
    "lint": "standard ./src/jshexi.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thesimj/js-hexi.git"
  },
  "author": "Mykola Bubelich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thesimj/js-hexi/issues"
  },
  "homepage": "https://github.com/thesimj/js-hexi#readme"
}
